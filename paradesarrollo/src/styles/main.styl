// moviles peque√±os	
@media (min-width: 320px)
	.mision
		&-bg
			background-size cover
	.guarnicion
		&-bg
			background-size cover
	.promociones2
		display none		
			
//moviles grandes			
@media (min-width: 500px)
	.mv
		display flex
		flex-wrap nowrap
	.mision
		width 360px
		margin 0 .5rem
	.vision
		width 360px
		margin 0 .5rem
	.promociones2
		display none	
		
//ipad		
@media (min-width: 768px)
	body
		background-image url('../img/ipad/background.jpg')
		height auto
	.tyg
		margin 2rem
		justify-content space-between	
	.guarnicion
		width 60%
	.lineas
		height 500px
		margin 2rem	0
	.promociones
		height 520px
		justify-content space-around
		&-title
			width 100%
			height 80px
			background-position center
		&-img
			width 50%
			height 280px
		&-textos
			line-height 2rem
			width 35%
			height 280px
	.promociones2
		display none		
	.footer
		height 250px
		&-cuchillo
			height 250px
//desktop
@media(min-width: 769px)
	body
		background-image url('../img/legumbres.png'), url('../img/bg-desktop.jpg')
		background-position left
		background-repeat-y repeat
		background-size contain
		display flex
		justify-content center
		width 100%	
	.cuerpo
		max-width 1366px
		display flex
		flex-wrap wrap
	.nav
		width 100%	
	.tml
		display flex
		justify-content center
		height 400px
	.tyg
		order -1
		height auto
	.mv
		display flex
		justify-content space-around
		margin 0 auto
		height 350px
	.cebollas
		background-image url('../img/cebollas.png')
		background-size cover
		background-repeat no-repeat
		width 100%
		height 150px
	.lineas
		width 15%		
	.guarnicion
		display none
	.promo
		display flex
		justify-content space-around
		width 70rem	
		border solid 3px red
	.promociones
		width 48%
		flex-wrap wrap
		&-img
			width 100%
			height 200px
			background-position center
		&-textos
			line-height 1.5rem
			height 150px
			width 100%
		&-redes
			height 50px
			&-fb
				height 50px
			&-ig
				height 50px	
	.cursiva
		font-size .8rem
	.textosD
		font-size .8rem
	.promociones2
		background-image url('../img/cartonR.png')
		background-repeat no-repeat
		background-size cover
		display flex
		flex-wrap wrap
		width 48%			
	.footer
		&-cuchillo
			display none				